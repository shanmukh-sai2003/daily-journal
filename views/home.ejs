<%- include("partials/header"); -%>

<h1>Home.</h1>
<p><%= homeContent %></p>

<% for(let i = 0; i < items.length; i++) { %>
  <h1><%= items[i].title %></h1>
  <% if(items[i].body.length > 100) { %>
    <p>
      <%= items[i].body.substring(0, 100) + "..." %>
      <a href="/posts/<%=items[i]._id%>">Read More</a>
    </p>
  <% } else {  %>
         <p><%= items[i].body %></p>
      <% } %>
<% } %>

<%- include("partials/footer"); -%>
